.container
	.col-sm-7.col-sm-offset-2
		.panel.panel-primary
			.panel-heading
				h3.panel-title.text-center Create User
			.panel-body
				.col-sm-10.col-sm-offset-1
					form#createUser.form()
					.form-group
						label.control-label(for='createname') UserName
						input#createname.form-control(type='text',ng-model='data.username', name='username', placeholder='Username')
					.form-group
						label.control-label(for='password') Password
						input#pasword.form-control(type='password',ng-model='data.password', name='password', placeholder='Password')
					.form-group
						label.control-label(for='confirm-pasword') Confirm Password
						input#confirmpasword.form-control(type='password',ng-model='data.confirmPassword', name='confirmPassword', placeholder='Confirm Password')
					.form-group
						button#create-btn.btn.btn-primary.pull-right(type='submit',ng-click='createUser()') Create


